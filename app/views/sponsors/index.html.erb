<p id="notice"><%= notice %></p>

<h1>Sponsors</h1>

<table>
  <thead>
    <tr>
      <th>Event</th>
      <th>Name</th>
      <th>Contact email</th>
      <th>Address line1</th>
      <th>Address line2</th>
      <th>Address city</th>
      <th>Address state</th>
      <th>Address postal code</th>
      <th>Stripe customer</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sponsors.each do |sponsor| %>
      <tr>
        <td><%= sponsor.event %></td>
        <td><%= sponsor.name %></td>
        <td><%= sponsor.contact_email %></td>
        <td><%= sponsor.address_line1 %></td>
        <td><%= sponsor.address_line2 %></td>
        <td><%= sponsor.address_city %></td>
        <td><%= sponsor.address_state %></td>
        <td><%= sponsor.address_postal_code %></td>
        <td><%= sponsor.stripe_customer_id %></td>
        <td><%= link_to 'Show', sponsor %></td>
        <td><%= link_to 'Edit', edit_sponsor_path(sponsor) %></td>
        <td><%= link_to 'Destroy', sponsor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Sponsor', new_sponsor_path %>
